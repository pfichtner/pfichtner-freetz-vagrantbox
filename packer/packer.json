        "c<wait2>",
        "set gfxpayload=keep<enter><wait2>",
        "linux /casper/vmlinuz <wait2>",
        "autoinstall quiet fsck.mode=skip <wait2>",
        "net.ifnames=0 biosdevname=0 systemd.unified_cgroup_hierarchy=0 <wait2>",
        "ds=\"nocloud-net;s=http://{{.HTTPIP}}:{{.HTTPPort}}/\" <wait2>",
        "---<enter><wait2>",
        "initrd /casper/initrd<enter><wait5>",
        "boot<enter>"
